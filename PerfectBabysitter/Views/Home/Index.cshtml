
@{
    ViewData["Title"] = "Index";
}


    <!-- Masthead -->
    <header class="masthead text-white text-center">
        <div class="overlay" style="box-shadow: rgba(0, 0, 0, 0.5) 4px 8px 11px 5px; text-shadow: none; font-family: Lato, &quot;Helvetica Neue&quot;, Helvetica, Arial, sans-serif;"></div>
        <div class="container">
            <div class="row">
                <div class="col-xl-9 mx-auto">
                    <h1 class="mb-5">Welcome to the best website to find babysitters online at an affordable price!</h1>
                </div>
                <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                    <form>
                        <div class="form-row">
                            <div class="col-12 col-md-9 mb-2 mb-md-0">
                                <input type="search" class="form-control form-control-lg" placeholder="Search..">
                            </div>
                            <div class="col-12 col-md-3" type="email" style="">
                                <button type="submit" class="btn btn-block btn-lg btn-primary">Search</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </header>
    <!-- Icons Grid -->
    <section class="features-icons bg-light text-center">
        <div class="container">
            <div class="row" style="">
                <div class="col-lg-4">
                    <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3" style="">
                        <div class="features-icons-icon d-flex">
                            <i class="fa fa-check m-auto text-primary"></i>
                        </div>
                        <h3>Best Babysitters</h3>
                        <p class="lead mb-0">We have resume validators and we do a background check before hiring our babysitters</p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                        <div class="features-icons-icon d-flex">
                            <i class="fa fa-dollar-sign m-auto text-primary"></i>
                        </div>
                        <h3>Cheap and Easy&nbsp; to use</h3>
                        <p class="lead mb-0">Babysitters are available on the minimum wage or bit more than that, so we have the most affordable babysitters on the web!</p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="features-icons-item mx-auto mb-0 mb-lg-3">
                        <div class="features-icons-icon d-flex">
                            <i class="fa fa-star m-auto text-primary"></i>
                        </div>
                        <h3>5 Star Rated Service</h3>
                        <p class="lead mb-0">Canada's top magazines have rated our service 5.0 Stars!</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Image Showcases -->
    <section class="showcase">
        <div class="container-fluid p-0">
            <div class="row no-gutters" style="background-image: url('img/27.png');">
                <div class="col-lg-6 order-lg-2 text-white showcase-img" style="background-image: url('img/showcase-1.jpg');"></div>
                <div class="col-lg-6 order-lg-1 my-auto showcase-text">
                    <h2>Easy to use website</h2>
                    <p class="lead mb-0">It's easy for parents to navigate through out website pages. Easy to book babysitters. We have implemented notifications features, so you don't miss any update regarding your posted job details.</p>
                </div>
            </div>
            <div class="row no-gutters" style="background-image: url('/img/27.png');">
                <div class="col-lg-6 text-white showcase-img" style="background-image: url('img/showcase-2.jpg');"></div>
                <div class="col-lg-6 my-auto showcase-text">
                    <h2>One-click to hire babysitters</h2>
                    <p class="lead mb-0">Newly improved, and full of great utility classes, You only need to checkout babysitter's profile and hire them with one click of your mouse.&nbsp;</p>
                </div>
            </div>
            <div class="row no-gutters" style="background-image: url('/img/27.png');">
                <div class="col-lg-6 order-lg-2 text-white showcase-img" style="background-image: url('img/showcase-3.jpg');"></div>
                <div class="col-lg-6 order-lg-1 my-auto showcase-text">
                    <h2>Easy to report and contact support</h2>
                    <p class="lead mb-0">If you are not satisfied with our service, you can report us easily or contact us via email. We will get back to you as soon as possible. Report us if our babysitters are late to your house!</p>
                </div>
            </div>
        </div>
    </section>
    <!-- Testimonials -->
    <section class="testimonials text-center bg-light">
        <div class="container">
            <h2 class="mb-5">What people are saying...</h2>
            <div class="row">
                <div class="col-lg-4">
                    <div class="testimonial-item mx-auto mb-5 mb-lg-0">
                        <img class="img-fluid rounded-circle mb-3" src="img/testimonials-1.jpg" alt="">
                        <h5>Margaret E.</h5>
                        <p class="font-weight-light mb-0">"This is fantastic! Thanks so much guys! My baby has never smiled more !"</p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="testimonial-item mx-auto mb-5 mb-lg-0">
                        <img class="img-fluid rounded-circle mb-3" src="img/testimonials-2.jpg" alt="">
                        <h5>Fred S.</h5>
                        <p class="font-weight-light mb-0">"Amazing customer support! They truly match their brand name, Perfect BabySitter!."</p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="testimonial-item mx-auto mb-5 mb-lg-0">
                        <img class="img-fluid rounded-circle mb-3" src="img/testimonials-3.jpg" alt="">
                        <h5>Sarah W.</h5>
                        <p class="font-weight-light mb-0">"Thanks so much for making these resources available to us!"</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Call to Action -->
    <section class="call-to-action text-white text-center">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-xl-9 mx-auto">
                    <h2 class="mb-4">Want to join us as a Babysitter?&nbsp;</h2>
                </div>
                <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                    <form>
                        <div class="form-row">
                            <div class="col-12 col-md-9 mb-2 mb-md-0">
                                <input type="email" class="form-control form-control-lg" placeholder="Enter your email...">
                            </div>
                            <div class="col-12 col-md-3">
                                <button type="submit" class="btn btn-block btn-lg btn-primary">Sign up!</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
   