@model JobsListViewModel;


<!-- Masthead -->
<header class="masthead text-white text-center">
    <div class="overlay" style="box-shadow: rgba(0, 0, 0, 0.5) 4px 8px 11px 5px; text-shadow: none; font-family: Lato, &quot;Helvetica Neue&quot;, Helvetica, Arial, sans-serif;"></div>
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto">
                <h1 class="mb-5">Welcome to the best website to find babysitters online at an affordable price!</h1>
            </div>
            <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                <!--search-->
                <form asp-controller="Search" asp-action="SearchResults" method="get">
                    <div class="form-row">
                        <div class="col-12 col-md-9 mb-2 mb-md-0">
                            Address
                            <input asp-for="Address" type="text" class="form-control form-control-lg" placeholder="Search..">
                        </div>
                        <div class="col-12 col-md-9 mb-2 mb-md-0">
                            Number of children
                            <input asp-for="Children" type="number" min="1" class="form-control form-control-lg" placeholder="Number of children">
                        </div>
                        <div class="col-12 col-md-9 mb-2 mb-md-0">
                            <input type="radio" asp-for="HouseholdDuties" value="false" />No Household Duties
                            <input type="radio" asp-for="HouseholdDuties" value="true" />Household duties
                            <input asp-for="Cooking" class="form-control form-control-lg">Cooking
                            <input asp-for="Cleaning" class="form-control form-control-lg">Cleaning
                        </div>
                        <div class="col-12 col-md-9 mb-2 mb-md-0">
                            Day-to-Day Activities
                            <input asp-for="Activities" type="search" class="form-control form-control-lg" placeholder="Activities">

                        </div>
                        <div class="col-12 col-md-3" type="button" style="">
                            <p><br /> <button type="submit" class="btn btn-block btn-lg btn-primary">Search</button> </p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</header>
<!-- Icons Grid -->
<div>
    <div>
        <h1>Search Results</h1>
        @if (Model.JobPostings.Any())
        {
            @foreach (var r in Model.JobPostings)
            {@Html.Partial("JobSummary", r)} }
         else
         {
            <h4>Sorry</h4>
            <p class="w3-text-grey">We couldn't find any jobs.</p>}
    </div>
</div>
